.contact
    .contact__content
        h1.contact__title Contact me
        form.contact__form(action='#', method='POST')
            div.contact__form--item
                label(for='name') Enter your name
                input#name.form-control(type='text', placeholder='Dmitry Kovalchuk' name='name')
            div.contact__form--item
                label(for='email') Enter your email
                input#email.form-control(type='email', placeholder='loftschool@study.com' name='email')
            div.contact__form--item
                label(for='message') Enter your message
                textarea#message(name="message", cols="40", rows="5")
            input.contact__form--submit(type='submit', value='Submit')

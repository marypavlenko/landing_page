.nav-mobile {
  display: none;
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  z-index: 2;
  background-color: #fff;

  @include tablets() {
    display: none;
  }
}
.nav-mobile__close-btn {
  position: absolute;
  width: 20px;
  height: 20px;
  top: 20px;
  right: 20px;
  background-size: cover;
  background-image: url(/src/images/icons/cross.svg);
}
.nav-mobile__list {
  display: flex;
  flex-direction: column;
  margin-left: 25px;
  align-items: start;
  margin-left: 20%;
  margin-top: 20%;
}
.nav-mobile__item {
  color: $text-color;
  font-weight: 600;
  font-size: 18px;
  line-height: 48px;
}
.nav-mobile__link {
  text-decoration: none;
}
.nav-mobile__link:hover {
  color: $links-color-hover;
  text-decoration: underline;
}
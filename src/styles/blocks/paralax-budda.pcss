.paralax-budda {
  display: flex;
  flex-direction: column;
}

.paralax-budda__wrapper {
  margin-bottom: 100px;
}

.budda {
  position: absolute;
  z-index: -1;
  left: 0;
  right: 0;
  min-height: 1000px;
  background-image: url('../images/content/budda.png');
  background-size: cover;
  background-repeat: no-repeat;
  background-position: 50% 0;
}
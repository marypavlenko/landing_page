.nav-menu {
    display: none;

    @include desktop() {
        display: flex;
    }

    @include tablets() {
        display: flex;
    }
}
.nav-menu__list {
    display: none;

    @include desktop() {
        display: flex;
}

    @include tablets() {
        display: flex;
        justify-content: center;
    }
}
.nav-menu__item {

    @include desktop() {
        margin: auto 20px;
    }

    @include tablets() {
        flex-wrap: nowrap;
        margin: 5% 5%;
    }
}
.nav-menu__link {
    color: $text-color;
    font-size: 16px;
    font-weight: 600;
    line-height: 30px;
    text-decoration: none;
}
.nav-menu__link:hover {
    color: $links-color;
    font-weight: 600;
    text-decoration: underline;
}
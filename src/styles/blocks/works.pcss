.works {

  @include tablets() {
    margin: 80px 0;
  }

  @include desktop() {
    margin: 10% 0;
  }
}

.works__content {

  @include desktop() {
    display: flex;
    margin-bottom: 15%;
  }
}

.works__content-slider {
  position: relative;
  margin: 0 -50px;

  @include tablets() {
    margin: initial;
  }

  @include desktop() {
    flex-basis: 60%;
  }
}

.works__title {
  color: $text-color;
  text-align: center;
  font-size: 30px;
  font-weight: 700;
  line-height: 36px;
  margin-bottom: 50px;
}

.works__picture {

  @include tablets() {
    width: 100%;
  }
}

.works__slider {
  display: none;

  @include tablets() {
    display: block;
  }
}

.works__item {

  @include tablets() {
    height: 100px;
  }
}

.works__arrows-block {
  display: flex;
  position: absolute;
  right: 0;
  bottom: 0;

  @include tablets() {
    bottom: initial;
  }
}

.work__slide-numb {

  @include tablets() {
    display: flex;
  }
}

.works__numbers {
  display: none;

  @include desktop() {
    display: block;
  }

  &--item {
    display: none;

    @include desktop() {
      display: block;
      color: #f0f0f0;
      font-size: 300px;
      font-weight: 800;
      line-height: 48px;
      margin: 50px 40px 0 -40px;
    }
  }
}

.works__arrows-item {
  display: flex;
  width: 51px;
  height: 51px;
  background-color: $arrows;
  justify-content: center;

  &--top {
    transform: rotate(-90deg);
  }

  &--down {
    transform: rotate(90deg);
  }
}

.works__arrow {
  width: 8px;
  height: 10px;
  fill: white;
}

.works__arrow:hover {
  opacity: 0.3;
}

.works__content-tech {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 50px;

  @include desktop() {
    flex-basis: 20%;
    margin: initial
  }
}

.works__technology {
  display: flex;
  justify-content: center;
  margin-top: 20px;

  @include tablets() {
    margin-top: 15%;
  }
}

.works__technology-item {
  display: inline-block;
  border-radius: 20px;
  background-color: $button-bg;
  opacity: .5;
  margin: 10px;

  &--text {
    margin: 15px;
    z-index: 1;
    text-align: center;
    font-size: 16px;
    font-weight: 600;
  }
}

.works__school {

  @include tablets() {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  &--title {
    color: $text-color;
    font-size: 30px;
    font-weight: 700;
    line-height: 36px;
  }

  &--text {
    opacity: 0.5;
    color: $text-color;
    font-size: 14px;
    font-weight: 400;
    line-height: 24px;
  }

  &--link {
    display: flex;
    align-items: center;
  }

  &--icon {
    width: 15px;
    height: 15px;
    margin-right: 20px;
    fill: $links-color;
  }

  &--preview {
    margin: 0;
    color: $links-color;
    font-size: 14px;
    font-weight: 700;
    line-height: 48px;
  }
}
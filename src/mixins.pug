mixin icon(name, className)
  - var icon = require(`images/icons/${name}.svg`);
  svg(class=className viewBox=icon.viewBox preserveAspectRatio="none")
    use(xlink:href=icon.url)

mixin image(path, className)
  img(src=require(`images/${path}`) class=className)

mixin nav(blockName)
  - var navList = [{title: "Home", link: "#"}, {title: "About Me", link: "#"}, {title: "Skills", link: "#"}, {title: "Projects", link: "#"}, {title: "Reviews", link: "#"}, {title: "Contacts", link: "#"}]
  nav(class=blockName)
    ul(class=blockName + '__list')
      each item in navList
        li(class=blockName + '__item')
          a(class=blockName + '__link' href=item.link)= item.title

mixin socials(mod)
  div(class='socials socials--' + mod)
    a(class='socials__item socials__item--' + mod href='https://www.instagram.com/m.pmq/' target='_blank')
      +icon('instagram', 'socials__icon socials__icon--instagram')
    a(class='socials__item socials__item--' + mod href='https://www.facebook.com/pavlenko.mary' target='_blank')
      +icon('vkontakte', 'socials__icon socials__icon--vkontakte')
    a(class='socials__item socials__item--' + mod href='https://github.com/marypavlenko' target='_blank')
      +icon('github', 'socials__icon socials__icon--github')